generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  clients  Client[]  @relation("DoctorClients")
  programs Program[] @relation("DoctorPrograms")
}

model Client {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  doctorId Int
  doctor   Doctor @relation("DoctorClients", fields: [doctorId], references: [id])
}

model Program {
  id       Int    @id @default(autoincrement())
  title    String
  doctorId Int
  doctor   Doctor @relation("DoctorPrograms", fields: [doctorId], references: [id])
}
